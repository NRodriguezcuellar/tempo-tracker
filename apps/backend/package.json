{
  "name": "@nicorodri/tempo-backend",
  "version": "1.0.15",
  "description": "Backend HTTP server for Tempo Tracker",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "bun build --target=node --minify --outfile=dist/index.js ./src/server.ts",
    "dev": "bun --watch src/server.ts"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@nicorodri/tempo-core": "workspace:*",
    "axios": "1.8.3",
    "chalk": "5.4.1",
    "zod": "3.24.2"
  }
}
