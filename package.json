{
  "name": "tempo-tracker-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "version": "1.0.2-beta.0",
  "description": "CLI tool for tracking time spent on git branches and syncing with Tempo",
  "type": "module",
  "scripts": {
    "release:patch": "npm version patch -m 'Release %s'",
    "release:minor": "npm version minor -m 'Release %s'",
    "release:major": "npm version major -m 'Release %s'",
    "release:beta": "npm version prerelease --preid=beta -m 'Release beta %s'",
    "release:beta-patch": "npm version prepatch --preid=beta -m 'Release beta %s'",
    "release:beta-minor": "npm version preminor --preid=beta -m 'Release beta %s'",
    "release:beta-major": "npm version premajor --preid=beta -m 'Release beta %s'",
    "build": "bun run build:core && bun run build:backend && bun run build:daemon && bun run build:cli",
    "build:all": "bun run build:core && bun run build:backend && bun run build:daemon && bun run build:cli",
    "build:core": "bun --filter=@tempo-tracker/core run build",
    "build:backend": "bun --filter=@tempo-tracker/backend run build",
    "build:daemon": "bun --filter=@tempo-tracker/daemon run build",
    "build:cli": "bun --filter=tempo-tracker run build",
    "dev:backend": "bun --filter=@tempo-tracker/backend run dev",
    "dev:cli": "bun --filter=tempo-tracker run dev",
    "check-types": "tsc --no-emit",
    "push-tag": "git push && git push --tags"
  },
  "keywords": [
    "tempo",
    "jira",
    "time-tracking",
    "cli"
  ],
  "author": "NRodriguezcuellar",
  "license": "MIT",
  "devDependencies": {
    "@types/inquirer": "9.0.7",
    "@types/node": "20.10.0",
    "prettier": "3.5.3",
    "typescript": "5.8.2"
  }
}
