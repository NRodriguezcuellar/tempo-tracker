{
  "name": "tempo-tracker",
  "version": "1.0.0",
  "description": "CLI tool for tracking time spent on git branches and syncing with Tempo",
  "main": "dist/index.js",
  "bin": {
    "tempo": "./dist/index.js"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build-target": "bun run build-cli && bun run build-daemon",
    "build-daemon": "bun build ./src/backend/server.ts --outdir dist --target=node --minify --outfile daemon-server.js",
    "build-cli": "bun build ./src/index.ts --outdir dist --target=node --minify"
  },
  "keywords": [
    "tempo",
    "jira",
    "time-tracking",
    "cli"
  ],
  "author": "NRodriguezcuellar",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.8.3",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "conf": "^13.1.0",
    "inquirer": "^12.5.0",
    "simple-git": "^3.27.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  }
}
