{
  "name": "tempo-tracker",
  "version": "1.0.0",
  "description": "CLI tool for tracking time spent on git branches and syncing with Tempo",
  "main": "dist/index.js",
  "bin": {
    "tempo": "./dist/index.js"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build-target": "bun build ./src/index.ts --outdir dist --target=node --minify",
    "build": "bun run build-target",
    "prepublishOnly": "node scripts/validate-package.js && bun run build",
    "version": "git add -A",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "tempo",
    "jira",
    "time-tracking",
    "cli"
  ],
  "author": "NRodriguezcuellar",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.8.3",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "conf": "^13.1.0",
    "inquirer": "^12.5.0",
    "simple-git": "^3.27.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.0",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NRodriguezcuellar/tempo-tracker.git"
  },
  "bugs": {
    "url": "https://github.com/NRodriguezcuellar/tempo-tracker/issues"
  },
  "homepage": "https://github.com/NRodriguezcuellar/tempo-tracker#readme"
}
