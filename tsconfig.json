{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tempo-tracker/core": ["packages/core/src"],
      "@tempo-tracker/core/*": ["packages/core/src/*"],
      "@tempo-tracker/daemon": ["apps/daemon/src"],
      "@tempo-tracker/daemon/*": ["apps/daemon/src/*"]
    }
  },
  "references": [
    { "path": "./packages/core" },
    { "path": "./apps/backend" },
    { "path": "./apps/daemon" },
    { "path": "./apps/cli" }
  ],
  "files": [],
  "exclude": ["node_modules", "dist"]
}
