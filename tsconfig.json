{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "baseUrl": "."
  },
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/backend" },
    { "path": "./packages/daemon" },
    { "path": "./packages/cli" },
    { "path": "./packages/mcp" }
  ],
  "files": [],
  "exclude": ["node_modules", "dist"]
}
